[Unit]
Description=WSO2 API Manager: <%= @profile %>
After=network.target

[Service]
ExecStart=<%= @server_script_path %> <%= @optimize_params %> start
ExecStop=<%= @server_script_path %> stop
ExecReload=<%= @server_script_path %> restart
PIDFile=<%= @pid_file_path %>
User=<%= @user %>
Group=<%= @user_group %>
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
